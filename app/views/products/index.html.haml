%h1 Listing products

%table.table
  %thead
    %tr
      %th Name
      %th Image
      %th

  %tbody
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.image
        %td
          = link_to 'Show', product, class: "btn btn-default btn-xs"
          = link_to 'Edit', edit_product_path(product), class: "btn btn-default btn-xs"
          = link_to 'Destroy', product, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-danger btn-xs"

%br

= link_to 'New Product', new_product_path, class: "btn btn-primary"
